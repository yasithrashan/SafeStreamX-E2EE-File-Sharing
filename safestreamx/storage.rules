rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path in the 'files' directory
    match /files/{userId}/{fileId} {
      // Allow read, write access if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}